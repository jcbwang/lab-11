<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../layout/head')%>
</head>
<body>
  <h1 id="result">Book Results</h1>
  <h2 id="return"><a href="/">Return to Collection</a></h2>
  <section class="flex-container">
  <% searchResults.forEach((book,idx) => { %>
    <div>
      <div class="book-item">
        <img src=" <%=book.image%>">
        <h3><%=book.title %></h3>
        <h4><%=book.authors %></h4>
        <p><%=book.description %></p>
        <button id="formButton<%=idx%>" type="button">Select This Book</button>
      </div>
      <form id="create-form<%=idx%>" action="/searches/add" method="POST" class="form" style="display:none;"> 
          <input type="text" name="title" value="<%=book.title%>">
          <input type="text" name="authors" value="<%=book.authors%>">
          <input type="text" name="isbn" value="<%=book.isbn%>">
          <input type="text" name="image" value="<%=book.image%>">
          <input type="text" name="description" value="<%=book.description%>">
          <input type="text" name="bookshelf" placeholder="Enter a Bookshelf Name" value="">
          <input type="submit" value="Add Book">
      </form>
  </div>
  <% }) %>
</section>
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script type="text/javascript" src="js/app.js"></script>
</body>
</html>