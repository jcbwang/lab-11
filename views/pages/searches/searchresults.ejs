<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <link rel="stylesheet" href="./styles/reset.css">
  <link rel="stylesheet" href="./styles/base.css">
  <link rel="stylesheet" href="./styles/icons.css">
  <link rel="stylesheet" href="./styles/layout.css">
  <link rel="stylesheet" href="./styles/modules.css">
</head>
<body>
  <h1>Book Results</h1>
  <section class="flex-container">
  <% searchResults.forEach((book,idx) => { %>
    <div>
      <div class="book-item">
        <img src=" <%=book.image%>">
        <h3><%=book.title %></h3>
        <h4><%=book.authors %></h4>
        <p><%=book.description %></p>
        <button id="formButton<%=idx%>" type="button">Select This Book</button>
      </div>
      <form id="create-form<%=idx%>" action="/searches/add/<%=book.isbn%>" method="POST" class="form" style="display:none;"> 
        <fieldset class="form-container">
          <legend>Add Book to Bookshelf</legend>
          <input type="text" value="<%=book.title%>">
          <input type="text" value="<%=book.authors%>">
          <input type="text" value="<%=book.isbn%>">
          <input type="text" value="<%=book.image%>">
          <input type="text" value="<%=book.description%>">
          <input type="text" placeholder="Enter a Bookshelf Name" value="">
          <!-- <p class="detail-button"><a href="/searches/add/<%=book.isbn%>">Submit</a></p> -->
          <input type="submit" value="submit">
        </fieldset>
      </form>
  </div>
  <% }) %>
</section>
<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script type="text/javascript" src="js/app.js"></script>
</body>
</html>